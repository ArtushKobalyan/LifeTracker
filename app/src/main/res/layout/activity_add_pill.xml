<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC"
    tools:context=".AddPillActivity">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить таблетку"
        android:textColor="#4A90E2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Поле ввода названия таблетки -->
    <EditText
        android:id="@+id/pillNameEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Название таблетки"
        android:inputType="text"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginHorizontal="16dp" />

    <!-- Поле ввода количества -->
    <EditText
        android:id="@+id/pillQuantityEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:hint="Количество"
        android:inputType="number"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pillNameEditText"
        android:layout_marginHorizontal="16dp" />

    <!-- Поле ввода дозы -->
    <EditText
        android:id="@+id/pillDoseEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_background"
        android:hint="Доза"
        android:inputType="numberDecimal"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pillQuantityEditText"
        android:layout_marginHorizontal="16dp" />

    <!-- Выбор дней недели -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/daysChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:singleSelection="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pillDoseEditText">

        <com.google.android.material.chip.Chip
            android:id="@+id/mondayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пн"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tuesdayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вт"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/wednesdayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ср"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/thursdayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чт"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/fridayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пт"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/saturdayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сб"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sundayChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вс"
            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/black"
            app:chipStrokeWidth="1dp"
            app:checkedIconEnabled="false"
            app:checkedIconVisible="false" />
    </com.google.android.material.chip.ChipGroup>

    <!-- Кнопка выбора времени -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botton_background"
        android:text="Выбрать время"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysChipGroup" />

    <!-- Кнопка сохранения -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/botton_background"
        android:text="Сохранить"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setTimeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
